#/bin/bash

if [ "${BLOCK_BUTTON}" -eq 1 ]; then
    EXPENSIVE=$(ps aux | sort -nrk 3,3 | head -n 5 | awk "{print \$11,\$3}" | sed -E 's@.+/(.+)@\1@')
    notify-send -u normal "CPU Hoggers" "$EXPENSIVE"
fi

PERC=$(printf "%0.2f" $(grep 'cpu ' /proc/stat | awk '{usage=100-($5*100)/($2+$3+$4+$5+$6+$7+$8)}{print usage}'))
echo -n $PERC
echo "%"
